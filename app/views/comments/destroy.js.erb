// will hide comment-#
<% if @comment.destroyed? %>
  $('.flash').prepend("<div class='alert alert-success'><button type='button' class='close' data-dismiss='alert'>&times;</button><%= flash.now[:notice] %></div>");
  $('#comment-<%= @comment.id %>').hide();
  $('.js-comments-count').html("<%= pluralize(@comment.user.comments.count, 'comment') %>");
<% else %>
  // New flash notice notifies user that error has occured
  $('#comment-' +<%= @comment.id %>).prepend("<div class='alert alert-danger'><%= flash.now[:alert] %></div>");
<% end %>
